{
  "manifest_version": 3,
  "name": "ReMind",
  "version": "1.3.0",
  "description": "A unified extension for TraceBack and Adaptive Focus.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "scripting",
    "sidePanel",
    "tabCapture",
    "desktopCapture",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "trial_tokens": [
    "Ahnga0BFCs/Fi0vS3Yi1TubrbmrBTftBF22UtU4wTjLTOU0zwbAKQxSDoHPOZXcECae73w1LpABuuxFaqt32NAAAAAB7eyJvcmlnaW4iOiJjaHJvbWUtZXh0ZW5zaW9uOi8vYmJtbGFkaGNmamxlYWloaGtqZGJvbGRsZ2Juam1waWkiLCJmZWF0dXJlIjoiQUlQcm9tcHRBUElNdWx0aW1vZGFsSW5wdXQiLCJleHBpcnkiOjE3ODE1NjgwMDB9"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "features/traceback/content.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "features/adaptivefocus/content/content.js"
      ],
      "css": [
        "features/adaptivefocus/content/styles.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "features/rezone/content.js"
      ],
      "css": [
        "features/rezone/styles.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "features/zenpet/content/assistant.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "ReMind",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "features/traceback/popup/popup.html"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://huggingface.co https://cdn.jsdelivr.net https://*.huggingface.co https://*.hf.co;"
  },
  "sandbox": {
    "pages": []
  },
  "web_accessible_resources": [
    {
      "resources": [
        "features/traceback/popup/*",
        "features/traceback/tools/*",
        "features/traceback/lib/*",
        "features/adaptivefocus/popup/*",
        "features/adaptivefocus/assets/*",
        "features/zenpet/popup/*",
        "features/zenpet/assets/*",
        "features/zenpet/content/*",
        "features/zenpet/injected/*",
        "features/htmlcon/lib/*",
        "features/htmlcon/popup/*",
        "assets/*",
        "popup/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
